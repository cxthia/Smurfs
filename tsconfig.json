{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "noEmit": true
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
